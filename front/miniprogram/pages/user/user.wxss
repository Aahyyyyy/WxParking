page {
    background-color: #f3f4f4;
}
.user_info_wrap {
    height: 45vh;
    overflow: hidden;
    position: relative;
    background-color: #FACC31;
}

.user_info_wrap .user_img_wrap {
    position: relative;
}

.user_info_wrap .user_img_wrap .img_bg {
    width: 100%;
    height: 50vh;
    filter: blur(10rpx);
}

.user_info_wrap .user_img_wrap .user_info {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 10%;
    text-align: center;
}

.user_icon {
    width: 165rpx;
    height: 165rpx;
    border-radius: 50%;
}

.user_name {
    color: #fff;
    margin-top: 40rpx;
    font-size: 36rpx;
}

.user_btn {
    width: 130px !important;
    position: absolute !important;
    left: 50% !important;
    transform: translateX(-50%) !important;
    top: 28% !important;
    text-align: center;
    color: #191919 !important;
    background-color: #FACC31 !important;
    border: 5rpx solid #191919 !important;
    font-size: 38rpx !important;
    padding: 35rpx 80rpx 35rpx 80rpx;
    border-radius: 15rpx !important;
}

.user_content {
    position: relative;
}

.user_main {
    position: absolute;
    width: 90%;
    left: 50%;
    transform: translateX(-50%);
    top: -140rpx;
}

.order_wrap {
    background-color: #fff;
    margin-top: 20rpx;
    margin-bottom: 50rpx;
    border-radius: 30rpx;
}

.order_title {
    padding: 20rpx;
    border-bottom: 1rpx solid #ccc;
}

.order_content {
    display: flex;
}

.order_wrap navigator{
    flex: 0.6;
    padding: 30rpx 0;
    align-items: center;
}

.order_icon {
    width: 40%;
    margin-left: 40rpx;
}

.order_icon1 {
    width: 40%;
    margin-left: 48rpx;
}

.order_name {
    font-size: 28rpx;
    margin-left: 25rpx;
}

.order_name1 {
    font-size: 28rpx;
    margin-left: 28rpx;
}

.service_wrap {
    background-color: #fff;
    margin-top: 20rpx;
}

.service_title {
    padding: 20rpx;
    border-bottom: 1rpx solid #ccc;
}

.service_content {
    display: flex;
}

.service_wrap navigator{
    flex: 0.6;
    padding: 30rpx 0;
    align-items: center;
}

.service_icon {
    width: 40%;
