.other_wrap {
    margin-top: 30rpx;
    background-color: #fff;
    padding: 20rpx 0;
    border-radius: 30rpx;
}

.other_item {
    display: flex;
    border-bottom: 1rpx solid #ccc;
    padding: 20rpx 0;
  }
  
.img_wrap {
    flex: 0.8;
    display: flex;
    justify-content: center;
    align-items: center;
}

.img_wrap img {
    width: 10%;
}
  
.info_wrap {
    padding-left: 20rpx;
    flex: 3.6;
    display: flex;
    flex-direction: column;
