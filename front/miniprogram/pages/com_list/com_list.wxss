view {
    color: var(--themeColor);
}

page {
    background-color: rgb(243, 243, 243);
}
  
.search {
    display: flex;
    height: 80rpx;
    padding: 10rpx;
    background-color: #FACC31;
}

.search_wrap {
  flex: 3;
  height: 70%;
  margin-top: 15rpx;
  margin-right: 8rpx;
  padding-left: 10px;
  align-items: center;
  border-radius: 15rpx;
  justify-content: center;
  background-color: #fff;
}

.addr_wrap {
  display: flex;
  flex: 1.5;
  flex-direction: column;
  justify-content: space-around;
}

.addr_wrap navigator{
  display: flex;
  padding: 0;
}

.search_img_wrap {
  padding-left: 0;
  padding-right: 0;
  flex: 0.5;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search_img_wrap image {
    width: 50%;
    height: 30%;
}

.addr_content {
  display: flex;
  flex: 0.7;
  align-items: center;
}

.address {
  padding-top: 3rpx;
  font-size: 34rpx;
  width: 50px;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-weight: 500;
}

.com_item {
    width: 92%;
    height: 20vh;
    border-radius: 10px;
    margin: 12px 0px 0px 4%;
    background-color: #fff;
    border-bottom: 1rpx solid #ccc;
}

.com_item navigator{
    height: 100% !important;
    display: flex;

}
  
.img_wrap {
    flex: 2;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 10px;
}
  
.img_wrap image {
    width: 100%;
    height: 100%;
}
  
.info_wrap {
    padding-left: 10rpx;
    flex: 3;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
  
.com_line {
    display: flex;
    flex-direction: row;
    justify-content:first baseline;
}

.com_name {
    padding-top: 5px;
    font-weight: bold;
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.com_name {
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}
  
.com_addr {
    color: red;
    padding-right: 7px;
    padding-bottom: 5px;
}

.nomore view{
    margin-top: 10rpx;
    margin-left: 36%;
    color: rgb(134, 134, 134);
}